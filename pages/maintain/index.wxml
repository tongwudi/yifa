<!--pages/maintain/index.wxml-->
<view class="maintain">
    <view class="navbar">
        <text>阀门维保信息</text>
    </view>

    <view class="list">
        <view class="title">
            <text>3.1 安装维护指南</text>
            <!-- 下载 -->
            <text>查看</text>
        </view>

        <view class="title">
            <text>3.2 巡检要点</text>
            <text bindtap="showDetail">查看</text>
        </view>
        <block>
            <view class="item">
                <text>3.2.1 传动机构润滑</text>
                <text>{{ info.FContractNo }}</text>
            </view>
            <view class="item">
                <text>3.2.2 填料</text>
                <text>{{ info.FPleaseBuyNo }}</text>
            </view>
            <view class="item">
                <text>3.2.3 垫片</text>
                <text>{{ info.FPleaseBuyNo }}</text>
            </view>
            <view class="item">
                <text>3.2.4 紧固件</text>
                <text>{{ info.FPleaseBuyNo }}</text>
            </view>
            <view class="item">
                <text>3.2.5 外观</text>
                <text>{{ info.FPleaseBuyNo }}</text>
            </view>
            <view class="item">
                <text>3.2.6 壁厚监测点</text>
                <text>{{ info.FPleaseBuyNo }}</text>
            </view>
            <view class="img-box">
                <image wx:if="{{ info.FImage }}" data-key="{{ info.FImage }}" bindtap="onPreviewImage" src="data:image/jpeg;base64,{{ info.FImage }}" />
                <image src="https://gimg2.baidu.com/image_search/src=http%3A%2F%2Flmg.jj20.com%2Fup%2Fallimg%2F1114%2F121420113514%2F201214113514-6-1200.jpg&refer=http%3A%2F%2Flmg.jj20.com&app=2002&size=f9999,10000&q=a80&n=0&g=0n&fmt=auto?sec=1670724105&t=2b956fb21d71df70dc708fb7cd9bd9e3" />
            </view>
        </block>

        <view class="title">
            <text>3.3 巡检记录</text>
            <text wx:if="{{ !object['3'] }}" data-key="3" bindtap="showDetail">查看</text>
        </view>
        <block wx:if="{{ object['3'] }}">
            <view class="table-box">
                <view class="thead">
                    <view class="td" style="width: 110rpx;">序号</view>
                    <view class="td" style="width: 180rpx;">维修项目</view>
                    <view class="td" style="width: 160rpx;">巡检人</view>
                    <view class="td" style="width: 280rpx;">时间</view>
                </view>
                <scroll-view scroll-y="true" class="tbody">
                    <view class="tbody-tr" wx:for="{{ inspectTableData }}" wx:key="index">
                        <view class="td" style="width: 110rpx;">{{ index + 1 }}</view>
                        <view class="td" style="width: 180rpx;">
                            <input type="text" bindinput="bindKeyInput" value="{{ item.project }}" data-index="{{ index }}" data-name="project" />
                        </view>
                        <view class="td" style="width: 160rpx;">
                            <input type="text" bindinput="bindKeyInput" value="{{ item.inspectors }}" data-index="{{ index }}" data-name="inspectors" />
                        </view>
                        <view class="td" style="width: 280rpx;"> {{ item.time }}</view>
                    </view>
                </scroll-view>
            </view>
        </block>

        <view class="title">
            <text>3.4 维修保养记录</text>
            <text wx:if="{{ !object['4'] }}" data-key="4" bindtap="showDetail">查看</text>
        </view>
        <view wx:if="{{ object['4'] }}" class="table-box">
            <table-view
                row-class-name="no-bb-line"
                headers="{{ tableHeader }}"
                data="{{ info.SerialNos }}"
                border
            />
        </view>
    </view>

    <view class="btns">
        <button hover-class="hover-btn">记录上传</button>
        <button hover-class="hover-btn">记录下载</button>
    </view>

    <button class="back-btn" hover-class="hover-btn" bindtap="goBack">返回前一页</button>
</view>