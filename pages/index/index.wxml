<view class="info">
    <view class="head">
        <text>江苏亿阀股份有限公司</text>
        <text>阀门信息溯源</text>
    </view>

    <view class="search">
        <input type="number" name="trackNo" bindinput="trackNoInput" placeholder="输入阀门跟踪号查询" />
        <button size="mini" hover-class="hoverBtn" bindtap="search">查 询</button>
    </view>

    <view class="list">
        <view class="title">1. 阀门参数概述</view>

        <view class="item">
            <text>1.1 合同号</text>
            <text>{{ info.FContractNo }}</text>
        </view>
        <view class="item">
            <text>1.2 请购单号</text>
            <text>{{ info.FPleaseBuyNo }}</text>
        </view>
        <view class="item">
            <text>1.3 阀门编码</text>
            <text>{{ info.FValueNo }}</text>
        </view>
        <view class="item">
            <text>1.4 编码(物料编码)</text>
            <text class="green">{{ info.FMaterielNo }}</text>
        </view>
        <view class="item">
            <text>1.5 项目/装置名称</text>
            <text>{{ info.FProjectNname }}</text>
        </view>
        <view class="item">
            <text>1.6 管道等级</text>
            <text>{{ info.FTractLv }}</text>
        </view>
        <view class="item">
            <text>1.7 物料描述</text>
            <text class="describe">{{ info.FMaterielDescription }}</text>
        </view>
        <view class="item">
            <text>1.8 识别码</text>
            <text>{{ info.FLdentifier }}</text>
        </view>
        <view class="item">
            <text>1.9 物料名称</text>
            <text>{{ info.FName }}</text>
        </view>
        <view class="item">
            <text>1.10 规格</text>
            <text>{{ info.FSpecification }}</text>
        </view>
        <view class="item">
            <text>1.11 应用标准</text>
            <text>{{ info.yybz }}</text>
        </view>
        <view class="item">
            <text>1.12 压力等级</text>
            <text>{{ info.FPressureLv }}</text>
        </view>
        <view class="item">
            <text>1.13 端部</text>
            <text>{{ info.FAmphi }}</text>
        </view>
        <view class="item">
            <text>1.14 介质</text>
            <text>{{ info.jiezhi }}</text>
        </view>
        <view class="item">
            <text>1.15 数量</text>
            <text>{{ info.FQty }}</text>
        </view>
        <view class="item">
            <text>1.16 跟踪号</text>
            <text>{{ info.FTrackingNo }}</text>
        </view>
        <view class="item">
            <text>1.17 监造单位</text>
            <text>{{ info.FConcurrentProductionUnit }}</text>
        </view>
        <view class="item">
            <text>1.18 监造工程师</text>
            <text>{{ info.FConcurrentProductionStaff }}</text>
        </view>
        <view class="item">
            <text>1.19 检验时间</text>
            <text>{{ info.FExamineTime }}</text>
        </view>
        <view class="item">
            <text>1.20 出厂日期</text>
            <text>{{ info.FFactoryTime }}</text>
        </view>
        <view class="item">
            <text>1.21 阀门图片</text>
            <view>
                <image data-key="{{info.FImage}}" bindtap="onPreviewImage"src="data:image/jpeg;base64,{{ info.FImage }}" wx:if="{{ info.FImage }}" />
            </view>
        </view>
        <view class="title">
            <text>2. 阀门其他信息</text>
            <text bindtap="goPage">查看</text>
        </view>
    </view>
</view>