/**app.wxss**/
button {
    background-color: #0000ff;
    color: #fff;
}

.info,
.other {
    padding-bottom: 20px;
}

.hoverBtn {
    background-color: #0000ff;
    color: #fff;
    opacity: 0.7;
}

.head {
    background-color: #5a1bbe;
}

.head text {
    display: block;
    padding: 5px 0;
    color: #fff;
    text-align: center;
    font-weight: normal;
}

.search {
    padding: 0 15px;
    margin: 15px 0;
    display: flex;
}

.search input {
    height: auto;
    flex: 1;
    font-size: 14px;
    border: 1px solid #0000ff;
}

.search input[placeholder] {
    text-align: center;
    font-size: 14px;
}

.search button {
    margin-left: 10px;
    font-weight: 400;
}


.list .item {
    line-height: 30px;
    padding: 0 10px;
    font-size: 14px;
    display: flex;
    border-bottom: 1px solid #dee4dc;
}

.list .item text:first-child {
    min-width: 80px;
    color: #0000ff;
}

.list .item text:first-child::after {
    content: 'ï¼š';
    display: inline-block;
}

.list .item text:last-child {
    flex: 1;
    text-align: right;
}

.list .item image {
    width: 100px;
    height: 100px;
}

.list .title {
    line-height: 36px;
    padding: 0 10px;
    font-weight: 700;
    overflow: hidden;
}

.list .title text:not(:first-child) {
    float: right;
    font-weight: normal;
    color: #0000ff;
}

.describe {
    text-align: left !important;
    word-break: break-all;
}

.green {
    color: #4ca64c;
}